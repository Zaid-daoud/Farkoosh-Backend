// ================= CONFIG =================

generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
// ================= ENUMS =================

enum RoleType {
  USER
  ADMIN
  MANAGER
  DRIVER
}

enum Gender {
  MALE
  FEMALE
}

enum AppLanguage {
  Ar
  En
}

enum ProductStatus {
  DRAFT
  ACTIVE
  ARCHIVED
  OUT_OF_STOCK
}

enum MediaType {
  IMAGE
  VIDEO
  DOCUMENT
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  READY_TO_SHIP
  SHIPPED
  OUT_FOR_DELIVERY
  DELIVERED
  CANCELLED
  RETURNED
  PARTIALLY_RETURNED
}

enum PaymentStatus {
  UNPAID
  PENDING
  PAID
  FAILED
  REFUNDED
  PARTIALLY_REFUNDED
}

enum PaymentMethod {
  CASH_ON_DELIVERY
  CLIQ
  WALLET
  CREDIT_CARD
}

enum DiscountType {
  PERCENTAGE
  FIXED_AMOUNT
}

enum StockMovementType {
  SALE          // بيع
  RESTOCK       // إعادة تعبئة
  RETURN        // مرتجع
  DAMAGED       // تالف
  ADJUSTMENT    // تعديل جرد
}

enum ReturnStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

// ================= USER & AUTH =================

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  emailVerifiedAt DateTime?
  passwordHash    String?

  isActive  Boolean   @default(true)
  isDeleted Boolean   @default(false)
  isLocked  Boolean   @default(false)
  lastLogin DateTime?

  role RoleType @default(USER)

  profile       Profile?
  accounts      Account[]
  addresses     Address[]
  orders        Order[]
  returnRequests ReturnRequest[]
  reviews       ProductReview[]
  sessions      Session[]
  cart          Cart?
  wishlist      Wishlist?
  notifications Notification[]
  wallet        Wallet? // محفظة رقمية للمستخدم (للمرتجعات أو الرصيد)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider          String
  providerAccountId String
  refreshToken      String?
  accessToken       String?
  expiresAt         Int?

  @@unique([provider, providerAccountId])
}

model Profile {
  id     String @id @default(cuid())
  userId String @unique
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  phone  String?

  firstName String?
  lastName  String?
  bio       String?
  gender    Gender?
  birthDate DateTime?
  
  preferredLanguage AppLanguage @default(Ar)
  avatarUrl         String?
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  refreshToken String   @unique
  deviceInfo   String?
  fcmToken     String?
  expiresAt    DateTime
  createdAt    DateTime @default(now())
}

model Wallet {
  id      String  @id @default(cuid())
  userId  String  @unique
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  balance Decimal @default(0.00) @db.Decimal(10, 2)
  updatedAt DateTime @updatedAt
}

// ================= LOCATIONS & ZONES =================

model Country {
  code   String @id // JO, SA
  nameAr String
  nameEn String
  flag   String?
  isActive Boolean @default(true)
  
  governorates Governorate[]
}

model Governorate {
  id        String @id @default(cuid())
  countryCode String
  country   Country @relation(fields: [countryCode], references: [code])
  nameAr    String // Amman, Zarqa
  nameEn    String
  cities    City[]
}

model City {
  id            String @id @default(cuid())
  governorateId String
  governorate   Governorate @relation(fields: [governorateId], references: [id])
  nameAr        String // Khalda, Dabouq
  nameEn        String
  shippingCost  Decimal @default(0.00) @db.Decimal(10, 2) // تكلفة شحن افتراضية للمدينة
  addresses     Address[]
}

model Address {
  id     String @id @default(cuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  label  String? // Home, Work

  buildingNumber String?
  apartment      String?
  street         String
  details        String? // Near Landmark
  
  cityId         String
  city           City @relation(fields: [cityId], references: [id])

  latitude  Float?
  longitude Float?

  isDefault Boolean @default(false)
}

// ================= PRODUCT CATALOG =================

model Category {
  id       String     @id @default(cuid())
  nameAr   String
  nameEn   String
  slug     String     @unique
  imageUrl String?
  
  parentId String?
  parent   Category?  @relation("CategoryParent", fields: [parentId], references: [id])
  children Category[] @relation("CategoryParent")
  
  products Product[]
}

model Brand {
  id       String    @id @default(cuid())
  nameAr   String
  nameEn   String
  slug     String    @unique
  logoUrl  String?
  products Product[]
}

// Normalized Attributes (Color, Size)
model Attribute {
  id      String            @id @default(cuid())
  nameAr  String
  nameEn  String
  options AttributeOption[]
}

model AttributeOption {
  id          String                    @id @default(cuid())
  attributeId String
  attribute   Attribute                 @relation(fields: [attributeId], references: [id], onDelete: Cascade)
  valueAr     String
  valueEn     String
  variants    ProductVariantAttribute[]
}

model Product {
  id            String  @id @default(cuid())
  nameAr        String
  nameEn        String
  slug          String  @unique
  descriptionAr String? @db.Text
  descriptionEn String? @db.Text
  
  sku           String? @unique // Master SKU

  // Display Pricing (Not Transactional)
  displayPrice  Decimal  @default(0) @db.Decimal(10, 2) 

  status     ProductStatus @default(DRAFT)
  isFeatured Boolean       @default(false)
 
  categoryId String
  category   Category  @relation(fields: [categoryId], references: [id])
  brandId    String?
  brand      Brand?    @relation(fields: [brandId], references: [id])

  media    Media[]
  variants ProductVariant[]
  reviews  ProductReview[]

  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  wishlistItems WishlistItem[]

  @@index([status])
  @@index([categoryId])
}

model ProductVariant {
  id        String  @id @default(cuid())
  productId String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  nameAr String // "أحمر - كبير"
  nameEn String // "Red - L"
  sku    String @unique

  // Transactional Pricing
  price          Decimal  @db.Decimal(10, 2)
  compareAtPrice Decimal? @db.Decimal(10, 2)
  costPrice      Decimal? @db.Decimal(10, 2)

  stock Int @default(0)

  attributes ProductVariantAttribute[]
  cartItems  CartItem[]
  orderItems OrderItem[]
  stockMovements StockMovement[]

  isDefault Boolean @default(false) // If product has no real variants

  @@index([productId])
}

model ProductVariantAttribute {
  variantId String
  optionId  String

  variant ProductVariant  @relation(fields: [variantId], references: [id], onDelete: Cascade)
  option  AttributeOption @relation(fields: [optionId], references: [id])

  @@id([variantId, optionId])
}

model Media {
  id        String    @id @default(cuid())
  productId String
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)
  url       String
  type      MediaType @default(IMAGE)
  isMain    Boolean   @default(false)
}

// ================= INVENTORY LOGS =================
// ✅ جديد: لتتبع حركة المخزون بدقة (Audit Trail)
model StockMovement {
  id        String            @id @default(cuid())
  variantId String
  variant   ProductVariant    @relation(fields: [variantId], references: [id])
  type      StockMovementType
  quantity  Int               // +50 (Restock), -1 (Sale)
  note      String?
  createdAt DateTime          @default(now())
  createdBy String?           // User ID of admin/staff
}

// ================= CART & WISHLIST =================

model Cart {
  id        String     @id @default(cuid())
  userId    String?    @unique // Nullable for Guest
  sessionId String?    @unique // To track Guests
  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id     String @id @default(cuid())
  cartId String
  cart   Cart   @relation(fields: [cartId], references: [id], onDelete: Cascade)

  variantId String
  variant   ProductVariant @relation(fields: [variantId], references: [id])

  quantity Int @default(1)

  @@unique([cartId, variantId])
}

model Wishlist {
  id     String         @id @default(cuid())
  userId String         @unique
  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  items  WishlistItem[]
}

model WishlistItem {
  id         String   @id @default(cuid())
  wishlistId String
  wishlist   Wishlist @relation(fields: [wishlistId], references: [id], onDelete: Cascade)

  productId String
  product   Product @relation(fields: [productId], references: [id])

  @@unique([wishlistId, productId])
}

// ================= ORDERS & PAYMENTS =================

model Order {
  id          String @id @default(cuid())
  orderNumber String @unique // ORD-2025-0001

  userId String?
  user   User?   @relation(fields: [userId], references: [id])
  
  // ✅ FIX: Address Snapshot (Immutable)
  shippingAddressSnapshot Json // Stores { city: "Amman", street: "...", phone: "..." }
  recipientName  String
  recipientPhone String

  status        OrderStatus   @default(PENDING)
  paymentStatus PaymentStatus @default(UNPAID)
  paymentMethod PaymentMethod @default(CASH_ON_DELIVERY)

  // Financials
  subTotal      Decimal @db.Decimal(10, 2)
  taxTotal      Decimal @default(0) @db.Decimal(10, 2)
  shippingCost  Decimal @db.Decimal(10, 2)
  discountTotal Decimal @default(0) @db.Decimal(10, 2)
  grandTotal    Decimal @db.Decimal(10, 2)

  note       String?
  couponCode String?

  orderItems    OrderItem[]
  statusHistory OrderStatusHistory[]
  payments      Payment[]
  returnRequest ReturnRequest?

  // Shipping Info
  trackingCode String?
  carrier      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderNumber])
  @@index([userId])
  @@index([status])
}

model OrderItem {
  id      String @id @default(cuid())
  orderId String
  order   Order  @relation(fields: [orderId], references: [id], onDelete: Cascade)

  variantId String?
  variant   ProductVariant? @relation(fields: [variantId], references: [id])

  // Snapshot Data (Immutable)
  productNameAr String
  productNameEn String
  sku           String?
  price         Decimal @db.Decimal(10, 2) // Price at moment of purchase
  quantity      Int
  total         Decimal @db.Decimal(10, 2)
}

model OrderStatusHistory {
  id        String      @id @default(cuid())
  orderId   String
  order     Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  status    OrderStatus
  note      String?
  createdAt DateTime    @default(now())
  createdBy String? 
}

model Coupon {
  id         String       @id @default(cuid())
  code       String       @unique
  type       DiscountType
  value      Decimal      @db.Decimal(10, 2)
  minSpend   Decimal?     @db.Decimal(10, 2)
  usageLimit Int?
  usedCount  Int          @default(0)
  expiresAt  DateTime?
  isActive   Boolean      @default(true)
}

model Payment {
  id            String        @id @default(cuid())
  orderId       String
  order         Order         @relation(fields: [orderId], references: [id])
  method        PaymentMethod
  amount        Decimal       @db.Decimal(10, 2)
  status        PaymentStatus
  transactionId String?
  metadata      Json?         // Stores gateway response (e.g. CLIQ ref ID)
  createdAt     DateTime      @default(now())
}

// ================= RETURNS SYSTEM =================
// ✅ جديد: إدارة المرتجعات بشكل منفصل

model ReturnRequest {
  id        String       @id @default(cuid())
  orderId   String       @unique
  order     Order        @relation(fields: [orderId], references: [id])
  userId    String
  user      User         @relation(fields: [userId], references: [id])
  
  status    ReturnStatus @default(PENDING)
  reason    String
  adminNote String?
  
  refundAmount Decimal @db.Decimal(10, 2)
  
  items     ReturnItem[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ReturnItem {
  id              String        @id @default(cuid())
  returnRequestId String
  returnRequest   ReturnRequest @relation(fields: [returnRequestId], references: [id], onDelete: Cascade)
  
  orderItemId     String
  quantity        Int
  reason          String?
}

// ================= SOCIAL & SYSTEM =================

model Notification {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String
  body      String
  data      Json?
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
}

model ProductReview {
  id        String   @id @default(cuid())
  productId String
  product   Product  @relation(fields: [productId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  rating    Int
  comment   String?
  createdAt DateTime @default(now())

  @@unique([productId, userId])
}